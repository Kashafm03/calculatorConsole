<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ChangeCalculatorGUI.MainWindow"
        Title="Change Calculator"
        Width="400" Height="600">
    <StackPanel Margin="20" Background="Black">

        <!-- Title in a red box -->
        <Border BorderThickness="0" Background="DarkRed" CornerRadius="5" Margin="0,10,0,10" HorizontalAlignment="Center" Padding="5">
            <TextBlock Text="Växel Beräknare" FontSize="18" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>

        <!-- Border around 'Ange pris' -->
        <Border BorderThickness="2" BorderBrush="White" Background="#1a1a1a" CornerRadius="5" Margin="0,0,0,10">
            <TextBlock Text="Ange pris:" FontSize="16" Foreground="White" Margin="10"/>
        </Border>
        <TextBox x:Name="PriceTextBox" FontSize="16" Margin="0,0,0,20"/>

        <!-- Border around 'Betalt' -->
        <Border BorderThickness="2" BorderBrush="White" Background="#1a1a1a" CornerRadius="5" Margin="0,0,0,10">
            <TextBlock Text="Betalt:" FontSize="16" Foreground="White" Margin="10"/>
        </Border>
        <TextBox x:Name="PaidTextBox" FontSize="16" Margin="0,0,0,20"/>

        <!-- Button for calculating change -->
        <Button Content="Beräkna Växel" FontSize="16" Background="DarkRed" Foreground="White" Click="CalculateChange" Margin="0,0,0,20"/>
        
        <!-- Border around 'Växel tillbaka' -->
        <Border BorderThickness="2" BorderBrush="White" Background="#1a1a1a" CornerRadius="5" Margin="0,0,0,10">
            <TextBlock Text="Växel tillbaka:" FontSize="16" Foreground="White" Margin="10"/>
        </Border>
        <TextBox x:Name="ResultTextBox" FontSize="16" IsReadOnly="True" Height="150" TextWrapping="Wrap"/>

        <!-- Exit button -->
        <Button Content="Avsluta" FontSize="16" Background="DarkRed" Foreground="White" Click="ExitApplication" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
